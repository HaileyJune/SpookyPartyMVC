@{
    ViewData["Title"] = "Registration Page";
}
@model User
<h1>Introduce Yourself</h1>
<form asp-action="Register" asp-controller="User" method="POST">
    
    <div class="form-group row">
    <label asp-for="Username"></label>
    <input asp-for="Username" class="form-control">
    <span asp-validation-for="Username" class="form-text text-muted"></span>
    </div>

    <div class="form-group row">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control">
    <span asp-validation-for="Name" class="form-text text-muted"></span>
    </div>
    
    <div class="form-group row">
    <label asp-for="Password"></label>
    <input asp-for="Password" class="form-control">
    <span asp-validation-for="Password" class="form-text text-muted"></span>
    </div>
    
    <div class="form-group row">    
    <label asp-for="PasswordConfirm"></label>
    <input asp-for="PasswordConfirm" class="form-control">
    <span asp-validation-for="PasswordConfirm" class="form-text text-muted"></span>
    </div>

    <input type="Submit" class="btn btn-primary" value="Sell Your Soul">
</form>